<div class="container">
  <div class="img_show">
    <% if @recipe_details["image"] %>
      <img src="<%= @recipe_details["image"] %>" alt="<%= @recipe_details["title"] %>">
    <% end %>
  </div>

  <div class="recipe-details">
    <% if @recipe_details %>
      <div class = "recipe-info">
        <i class="fa-solid fa-utensils"></i>
        <h2><%= @recipe_details["title"] %></h2>
        <p><%= @recipe_details["summary"].html_safe %></p>
      </div>

      <div class= "list-items">
      <i class="fa-solid fa-carrot"></i>
      <h2>Ingrédients</h2>
      <ul >
        <% @recipe_details["extendedIngredients"].each do |ingredient| %>
          <li><%= ingredient["original"] %></li>
        <% end %>
      </ul>
      </div>
      <div class="instructions_info">
      <i class="fa-solid fa-circle-info"></i>
      <h2>Instructions</h2>
      <p><%= @recipe_details["instructions"].html_safe %></p>
    <!-- Autres détails que vous souhaitez afficher -->
    <% else %>
      <p>La recette n'a pas pu être trouvée.</p>
    <% end %>
       </div>
  </div>
</div>
