<div class="container">
  <h1 class='fontfamily mt-2'>Help yourself</h1>

  <% if @recipes.present? %>
    <div class="recipes">
      <% @recipes.each do |recipe| %>
        <div class="recipe d-flex flex-column">
          <%= image_tag recipe["image"], alt: recipe["title"] %>
          <%= link_to recipe["title"], recipe_path(recipe["id"]) %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="fs-2 mt-5" style="font-family: Pacifico;">No recipes found ğŸ˜¥</p>
  <% end %>
</div>
