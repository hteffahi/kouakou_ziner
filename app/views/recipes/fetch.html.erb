<div class="container">
  <h1 class='fontfamily mt-2'>Recipe Results</h1>
  <% if @recipes.present? %>
    <div class="recipes">
      <% @recipes.each do |recipe| %>
        <div class="recipe">
          <%= link_to recipe_path(recipe["id"]) do%>
            <%= image_tag recipe["image"], alt: recipe["title"] %>
            <%= recipe["title"] %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No recipes found.</p>
  <% end %>
</div>
