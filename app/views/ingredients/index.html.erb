<!-- app/views/ingredients/index.html.erb -->

<h1>Liste des Ingrédients</h1>

<div class="row">
  <% @ingredients.each do |ingredient| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm" style="background-color: #f8f9fa;">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title" style="color: black;"><%= ingredient.name %></h5>
          <p class="card-text" style="color: black;">
            Quantité: <%= ingredient.amount %> <%= ingredient.unit %><br>
          </p>
          <div class="mt-auto">
            <%= link_to 'Show', ingredient, class: "btn btn-outline-secondary btn-sm" %>
            <%= link_to 'edit', edit_ingredient_path(ingredient), class: "btn btn-outline-secondary btn-sm" %>
            <%= link_to "Delete",ingredient_path(ingredient),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger btn-sm"%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'Nouvel Ingrédient', new_ingredient_path, class: "btn btn-primary" %>
