<!-- app/views/ingredients/index.html.erb -->
<div class="container">
<div class="add-margin">

  <h1>Liste des Ingrédients</h1>
  <%= link_to 'Nouvel Ingrédient', new_ingredient_path, class: "btn btn-primary" %>

  <div class="row justify-content-center">
    <div data-controller='search-ingredients' class="col-sm-8 my-3">
      <%= form_with url: ingredients_path, method: :get, class: "d-flex", data: { search_ingredients_target: 'form' } do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Type a keyword",
          data: { action: 'keyup->search-ingredients#update', search_ingredients_target: 'input' }
        %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
      <%= render 'list', ingredients: @ingredients %>
    </div>
  </div>
</div>
</div>
