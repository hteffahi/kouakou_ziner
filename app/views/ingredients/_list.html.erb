<div data-search-ingredients-target='list' class='row'>
  <% if !@ingredients.empty? %>
    <% @ingredients.each do |ingredient| %>
      <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
        <div class="card h-100 shadow-sm" style="background-color: #f8f9fa;">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title" style="color: black;"><%= ingredient.name %></h5>
            <p class="card-text" style="color: black;">
              Amount: <%= ingredient.amount %> <%= ingredient.unit %><br>
              Expiration : <%= ingredient.expiration %>
            </p>
            <div class="mt-auto">
              <%= link_to 'Select', ingredient, class: "btn btn-outline-secondary btn-sm" %>
              <%= link_to 'Edit', edit_ingredient_path(ingredient), class: "btn btn-outline-secondary btn-sm" %>
              <div id='delete'>
                <%= link_to ingredients_path, class: "navbar-brand" do %>
                  <%= image_tag 'fridge.png', alt: 'Ajouter un ingredient au frigo' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>Sorry, we dont find your ingredient</p>
  <% end %>
</div>
